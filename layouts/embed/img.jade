- padding = padding || /^p(.*)$/.exec(css)[1];
- file = 'http://local.marinatravelblog.com:4000/img/'+file;
- stdSizes = file + ext + ' 800w,' + file + '-md' + ext + ' 570w,' + file + '-sm' + ext + ' 330w'
- xlgSizes = file + '-xlg' + ext + ' 2000w,' + stdSizes
if xlg
    if imageIndex === 0
        .lazy-load(style='padding-bottom:' + padding + '%;')
            img.xlg(alt=alt, src=file + ext, srcset=stdSizes, data-src=file + ext, data-srcset=xlgSizes)
    else
        .lazy-load(style='padding-bottom:' + padding + '%;')
            img.xlg(alt=alt, src=file + '-sm' + ext, data-src=file + ext, data-srcset=xlgSizes)
else
    .lazy-load(style='padding-bottom:' + padding + '%;')
        img(alt=alt, src=file + ext, srcset=stdSizes)
